<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

  <t:title>Test p:namespace-rename #014</t:title>

  <t:input port="source">
    <d:doc xmlns:d="http://foo.com" d:attr="val"/>
  </t:input>

  <t:pipeline>
    <p:pipeline version='1.0'>
      <p:namespace-rename from="http://foo.com" to="http://bar.com" apply-to="attributes"/>
    </p:pipeline>
  </t:pipeline>

  <t:output port="result">
    <d:doc xmlns:d="http://foo.com" bar:attr="val" xmlns:bar="http://bar.com"/>
  </t:output>

</t:test>

